<% if @book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(@book), method: :delete, remote: true do %>
      <i class="fa fa-heart fa-xs" aria-hidden="true"  style="color: red;">
        <%= @book.favorites.count %>
      </i>
    <% end %>
  </td>
<% else %>
  <td>
    <%= link_to book_favorites_path(@book), method: :post, remote: true do %>
      <i class="fa fa-heart fa-xs" aria-hidden="true">
        <%= @book.favorites.count %>
      </i>
    <% end %>
  </td>
<% end %>